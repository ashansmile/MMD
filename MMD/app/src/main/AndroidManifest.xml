<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maian.mmd">

    <application
        android:name=".base.MMDApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.WorkeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.SplashActivity" />
        <activity android:name=".activity.NavationActivity" />

        <receiver
            android:name=".utils.NetworkChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>

                <!-- 网络状态发生变化的时候，系统会发出 android.net.conn.CONNECTIVITY_CHANGE -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.ErJiTableActivity" />
        <activity android:name=".activity.FuwuqiLiebiaoActivity" />
        <activity android:name=".activity.ShouChangActivity" />
        <activity android:name=".activity.GuanyuActivity"></activity>
    </application>

</manifest>